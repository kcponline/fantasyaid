{{#unless logged_in}}
    <form class="create-update-form" id="signin" action="/users/login" method="POST">

        <div class="form-group">
            <label for="em">Email:</label>
            <input type="text" id="em" name="email">
        </div>

        <div class="form-group">
            <label for="pass">Password:</label>
            <input type="password" id="pass" name="password">
        </div>

        <button type="submit">Sign In</button>
    </form>
    <br>
    <p> Sign in to get help picking your fantasy team! </p>
    <p> If you don't have an account, sign up now! </p>
{{/unless}}

{{#if logged_in}}
    <div class="container">
        <div class="col-md-12">
            <h2>Add a Player</h2>
            <form class="create-update-form" action="fantasy/create" method="POST">

                <div class="form-group" id="add">
                    <label for="ca">Player Name:</label>
                    <input type="text" id="ca" name="fantasy_name">
                </div>

                <button id="addB" type="submit">Add Player</button>
            </form>
        </div>

    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h2>fantasy Order List</h2>
                <ul>
                    {{#each fantasy}}
                        {{#unless this.devoured}}
                            <li>
                                {{this.fantasy_name}}

                                <form action="fantasy/update/{{this.id}}?_method=PUT" method="POST">
                                    <input type="hidden" name="devoured" value="true">
                                    <button type="submit">DEVOUR!</button>
                                </form>
                                {{fantasy/delete-fantasy}}
                            </li>
                        {{/unless}}
                    {{/each}}
                </ul>
            </div>
            <div class="col-md-6">
                <h2>fantasys That Have Been Devoured!</h2>

                <ul>
                    {{#each fantasy}}
                        {{#if this.devoured}}
                            <li>
                                {{this.fantasy_name}}

                                <form action="fantasy/update/{{this.id}}?_method=PUT" method="POST">
                                    <input type="hidden" name="devoured" value="false">
                                    <button type="submit">PUKE IT BACK!</button>
                                </form>
                            </li>
                        {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
{{/if}}
