        </div>
        <!-- Module Title -->
        <table class="table-scores">
            <tr class="t-header">
                <td>Receptions</td>
                <td>Pass Yards</td>
                <td>Total TD's</td>
                <td>Fantasy Points</td>
            </tr>
            <tr>
                <td id="teRightReceptions"></td>
