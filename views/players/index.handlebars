<!DOCTYPE html>
<div class="container">

    <div class="jumbotron" id="jumbo">
        <h1 class="text-center">Can I Take Your Order?</h1>
        <hr>
        <h3 class="text-center">All Types of players!</h3>
        <h3 class="text-center">Any Way You Want It!</h3>
        <br>

    </div>
</div>
{{#if username}}
    Welcome {{username}}! Make some players.
{{/if}}

{{#unless logged_in}}
    <p> Sign up to add your players!! </p>
{{/unless}}

{{#if logged_in}}
    <div class="container">
        <div class="col-md-12">
            <h2>Add a player</h2>
            <form class="create-update-form" action="players/create" method="POST">

                <div class="form-group" id="add">
                    <label for="ca">player Name:</label>
                    <input type="text" id="ca" name="player_name">
                </div>

                <button id="addB" type="submit">Add player</button>
            </form>
        </div>

    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h2>player Order List</h2>
                <ul>
                    {{#each players}}
                        {{#unless this.devoured}}
                            <li>
                                {{this.player_name}}

                                <form action="players/update/{{this.id}}?_method=PUT" method="POST">
                                    <input type="hidden" name="devoured" value="true">
                                    <button type="submit">DEVOUR!</button>
                                </form>
                                {{players/delete-player}}
                            </li>
                        {{/unless}}
                    {{/each}}
                </ul>
            </div>
            <div class="col-md-6">
                <h2>players That Have Been Devoured!</h2>

                <ul>
                    {{#each players}}
                        {{#if this.devoured}}
                            <li>
                                {{this.player_name}}

                                <form action="players/update/{{this.id}}?_method=PUT" method="POST">
                                    <input type="hidden" name="devoured" value="false">
                                    <button type="submit">PUKE IT BACK!</button>
                                </form>
                            </li>
                        {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
{{/if}}
