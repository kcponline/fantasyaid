<!DOCTYPE html>
<section class="m-12 bg-dark-blue">
        <div class="m-01"><br></div>
    <div class="m-04"  id="signup1">
        <div class="m-6 bg-03">
            <form class="create-update-form" id="signup" action="/users/create" method="POST">
                <div class="form-group">
                    <label for="un">Username:</label>
                    <input type="text" id="un" name="username" placeholder="Username">
                </div>

                <div class="form-group">
                    <label for="em">Email:</label>
                    <input type="text" id="em" name="email" placeholder="Email">
                </div>

                <div class="form-group">
                    <label for="pass">Password:</label>
                    <input type="password" id="pass" name="password" placeholder="Password">
                </div>

                <button type="submit" href="/fantasy/index">Sign Up!</button>
            </form>
        </div>
    </div>
    <div class="m-02"><br></div>

    <div class="m-04"  id="signin1">
        <div class="m-6 bg-03">
            <form class="create-update-form" id="signin" action="/users/login" method="POST">

                <div class="form-group">
                    <label for="em">Email:</label>
                    <input type="text" id="em" name="email" placeholder="Email">
                </div>

                <div class="form-group">
                    <label for="pass">Password:</label>
                    <input type="password" id="pass" name="password" placeholder="Password">
                </div>

                <button type="submit" href="/fantasy/index">Sign In</button>
            </form>
        </div>
    </div>

</section>
