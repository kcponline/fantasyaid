<!DOCTYPE html>
<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <form class="create-update-form" id="signup" action="/users/create" method="POST">
                <div class="form-group">
                    <label for="un">Username:</label>
                    <input type="text" id="un" name="username">
                </div>

                <div class="form-group">
                    <label for="em">Email:</label>
                    <input type="text" id="em" name="email">
                </div>

                <div class="form-group">
                    <label for="pass">Password:</label>
                    <input type="password" id="pass" name="password">
                </div>

                <button type="submit" href="/fantasy/index">Sign Up!</button>
            </form>
        </div>
        <div class="col-sm-6">
            <form class="create-update-form" id="signin" action="/users/login" method="POST">

                <div class="form-group">
                    <label for="em">Email:</label>
                    <input type="text" id="em" name="email">
                </div>

                <div class="form-group">
                    <label for="pass">Password:</label>
                    <input type="password" id="pass" name="password">
                </div>

                <button type="submit" href="/fantasy/index">Sign In</button>
            </form>
        </div>
    </div>
</div>
